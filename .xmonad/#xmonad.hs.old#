import XMonad
import XMonad.Hooks.ManageDocks
import XMonad.Util.Run(spawnPipe)

main = do xmproc <- spawnPipe "/usr/bin/xmobar /home/sahiti/.xmobarcc"
     xmonad $ defaultConfig { manageHook = manageDocks <+>
     (isFullscreen --> doFullFloat) <+> manageHook defaultConfig

     	         	       , layoutHook = avoidStruts  $  layoutHook defaultConfig
			       , borderWidth		= 0
			       , modMask			= mod4Mask
			       , terminal		= "urxvt"
			       , normalBorderColor	= "#000014"
			       , focusedBorderColor	= "#586e75"}
