--  -*- eval: (git-auto-commit-mode 1) -*-


Config { font = "xft: Liberation Mono: size=7.5:bold:antialias=true"
       , bgColor = "#00161a"
       , fgColor = "#657b83"
       , position = BottomSize L 100 4
       , lowerOnStart = True
       , commands = [ Run DynNetwork     [ "--template" , "<dev>: down <rx>kB/s| up <tx>kB/s"] 10
       	 	    , Run MPD ["-t", "<statei> <title>", "--", "-P", ">>", "-Z", "||", "-S", "><"] 10
       	 	    , Run Cpu ["-L","3","-H","50","--high","#dc322f"] 10
                    , Run Memory ["-t","Mem: <usedratio>%"] 10
                    , Run Date "%a %b %_d %k:%M" "date" 10
		    , Run BatteryP ["BAT0"]
		                      ["-t", "<acstatus>"
                  		      , "-L", "10", "-H", "80"
                  		      , "-l", "#cb4b16"
                  		      , "--", "-O", "Charging: <left>%", "-o", "Battery: <left>%"
                  		      ] 10
                    , Run Locks
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %dynnetwork% | %cpu% | %memory% | %battery% | <fc=#2aa198>%mpd% </fc>|%locks%| <fc=#b58900>%date%</fc>"
       }
